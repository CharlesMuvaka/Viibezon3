{{#partial "content"}}
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm  ">
            <a class="navbar-brand ms-5"><img class="pro me-2" src="../images/pro.jpg"
                                              alt="logo"><span>VIBE</span>ZON3</a>
            <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#yes"
                    aria-label="toggle navigation"
                    aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" collapse navbar-collapse me-5" id="yes">
                <ul class="navbar-nav ms-auto">
                    <li><a href="/" class="nav-link  p2 px-4">Home</a></li>
                    <li><a href="/artists" class="nav-link  p2 px-4">Artists</a></li>
                    <li><a href="/labels" class="nav-link  p2 px-4">Labels</a></li>
                    <li><a class="nav-link  p2 px-4">News</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="container vh-100">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-sm-10 text-white ">

                <div class="mainCont d-flex w-100 main1 ">

                    <div class="cont1 w-50 ">
                        <div class="first d-flex flex-column align-items-center">
                            <h5 class="my-3">{{label.name}}</h5>
                            <img class="cont h-75" src="{{label.avatarUrl}}" alt="">
                            <p class="m-1">Label location: {{label.location}}</p>
                            <p class="m-1">Label manager: {{ label.manager}}</p>
                            <p>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                            </p>

                        </div>
                        <div class="rate mb-3 d-flex justify-content-around align-items-center">
                            <a class="tag" href="/delete-label/{{label.id}}">Delete</a>
                            <a class="tag" href="/update-label/{{label.id}}">update</a>

                        </div>
                    </div>
                    <div class="cont2 w-50">
                        <div class="first d-flex flex-column align-items-center">
                            <h5 class="my-3">Signed Artists</h5>
                            <ul>
                                {{#each artist}}
                                    <a href="/artist/{{id}}" class="text-white "><li class="list-item">{{name}}</li></a>
                                {{/each}}

                            </ul>
                        </div>
                        <br>
                        <br>


                    </div>
                </div>


            </div>
        </div>
    </div>
    <div class="w-50 ms-auto d-flex justify-content-end">
        <a href="/labels" class="btn btn-light mx-3 text-center text-dark"><b class="fa-regular fa-house-blank">Back</b></a>
        <i class="fa-regular fa-house-blank"></i>

    </div>

{{/partial}}
{{>layout.hbs}}