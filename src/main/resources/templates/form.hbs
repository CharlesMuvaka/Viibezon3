{{#partial "content"}}

    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark main1">
            <div class="w-50">
                <a class="navbar-brand ms-5"><img class="pro me-2" src="./images/pro.jpg" alt="logo" class="logo"><span>VIBE</span>ZON3</a>

            </div>
            <div class="w-50 ms-auto d-flex justify-content-end">
                <a href="#" class="button1 btn-light mx-3 text-center"><i class="fa-regular fa-house-blank"></i></a>
                <i class="fa-regular fa-house-blank"></i>

            </div>

        </nav>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12  d-flex flex-column align-items-center justify-content-center ">
                <h3 class="text-white my-4">Please fill in your details.</h3>
                <i class="text-end">On submission animal will be stored and you will be redirected to the homepage</i>
                <form class="w-75" action="/animalNormal" method="post">

                    <div class="form-group w-75 mt-4">
                        <label for="animalName">1. Enter Name of the artist</label>
                        <input required type="text" class="form-control" name="sightAnimalName" id="animalName">
                    </div>

                    <div class="form-group w-75 my-2">
                        <label for="rangerName">2. Enter music genre </label>
                        <input required type="text" name="rangerName" class="form-control"  id="rangerName">
                    </div>
                    <div class="form-group w-75 my-2">
                        <label for="location">3. Select animal species Sighted</label>
                        <select required class="form-select my-1" name="sightAnimalType" class="form-control" id="location">
                            <option value="Normal Animal">Normal Animal</option>
                            <option value="savannah">Rare Species</option>
                        </select>
                    </div>

                    <div class="form-group w-75 my-2">
                        <label for="location">6. Select place of the location</label>
                        <select required class="form-select my-1" name="locationName" class="form-control" id="location">
                            <option value="Savannah">Savannah</option>
                            <option value="Mushy">Mushy</option>
                            <option value="Equatorial">Equatorial</option>
                            <option value="Swampy">Swampy</option>
                        </select>
                    </div>
                    <button type="submit" class="btn w-75 my-2 " id="myButt">Submit</button>
                </form>
            </div>
        </div>
    </div>

{{/partial}}
{{>layout.hbs}}